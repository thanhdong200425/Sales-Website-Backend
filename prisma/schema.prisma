generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int              @id @default(autoincrement())
  name        String
  slug        String           @unique
  summary     String?
  description String?
  price       Decimal          @db.Decimal(10, 2)
  color       String?
  size        String?
  style       String?
  currency    String           @default("USD")
  inStock     Boolean          @default(true) @map("in_stock")
  featured    Boolean          @default(false)
  status      String           @default("DRAFT")
  stockLevel  Int              @default(0) @map("stock_level")
  category    ProductCategory? @relation(fields: [categoryId], references: [id])
  categoryId  Int?             @map("category_id")
  vendor      Vendor?          @relation(fields: [vendorId], references: [id])
  vendorId    Int?             @map("vendor_id")
  images      ProductImage[]
  orderItems  OrderItem[]
  favoritedBy Favorite[]
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")
  ownerId     Int? // <-- Made optional for vendor products
  owner       User?            @relation("UserProducts", fields: [ownerId], references: [id]) // <-- Made optional

  @@map("products")
}

model ProductCategory {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("product_categories")
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  url       String
  altText   String?  @map("alt_text")
  position  Int      @default(0)
  product   Product  @relation(fields: [productId], references: [id])
  productId Int      @map("product_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("product_images")
}

model User {
  id             Int                  @id @default(autoincrement())
  email          String               @unique
  password       String
  name           String?
  orders         Order[]
  favoritedBy    Favorite[]
  passwordResets PasswordResetToken[]
  notifications  Notification[]
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  role           String               @default("user")
  products       Product[]            @relation("UserProducts")

  @@map("users")
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([token])
  @@index([userId])
  @@map("password_reset_tokens")
}

model VendorPasswordResetToken {
  id        Int      @id @default(autoincrement())
  vendorId  Int      @map("vendor_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  vendor    Vendor   @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([token])
  @@index([vendorId])
  @@map("vendor_password_reset_tokens")
}

model Vendor {
  id              Int                        @id @default(autoincrement())
  email           String                     @unique
  password        String
  businessName    String                     @map("business_name")
  contactName     String?                    @map("contact_name")
  phone           String?
  address         String?
  avatar          String?
  averageRating   Decimal                    @default(0) @map("average_rating") @db.Decimal(3, 2)
  totalReviews    Int                        @default(0) @map("total_reviews")
  responseTime    Int                        @default(0) @map("response_time") // in minutes
  fulfillmentRate Decimal                    @default(0) @map("fulfillment_rate") @db.Decimal(5, 2)
  status          String                     @default("ACTIVE") // ACTIVE, SUSPENDED, PENDING
  products        Product[]
  passwordResets  VendorPasswordResetToken[]
  createdAt       DateTime                   @default(now()) @map("created_at")
  updatedAt       DateTime                   @updatedAt @map("updated_at")

  @@map("vendors")
}

model Favorite {
  user       User     @relation(fields: [userId], references: [id])
  userId     Int      @map("user_id")
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int      @map("product_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  @@id([userId, productId])
  @@map("favorites")
}

model Order {
  id          Int    @id @default(autoincrement())
  orderNumber String @unique // e.g., "TXNID983274"
  userId      Int    @map("user_id")
  user        User   @relation(fields: [userId], references: [id])

  // Shipping Details
  customerName    String
  shippingAddress String
  trackingNumber  String?

  // Financials
  totalAmount Decimal @db.Decimal(10, 2)
  status      String  @default("PROCESSING") // PENDING, SHIPPED, DELIVERED

  // Relations
  items    OrderItem[]
  timeline OrderEvent[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("orders")
}

model OrderItem {
  id      Int   @id @default(autoincrement())
  orderId Int   @map("order_id")
  order   Order @relation(fields: [orderId], references: [id])

  // Snapshot of product details at time of purchase
  productId Int     @map("product_id")
  product   Product @relation(fields: [productId], references: [id])

  productName String
  quantity    Int
  price       Decimal @db.Decimal(10, 2)
  color       String?
  size        String?
  image       String? // Snapshot of the image URL

  @@map("order_items")
}

model OrderEvent {
  id      Int   @id @default(autoincrement())
  orderId Int   @map("order_id")
  order   Order @relation(fields: [orderId], references: [id])

  status      String // e.g., "Order Placed", "Shipped"
  description String? // e.g., "Package arrived at Philadelphia facility"
  timestamp   DateTime @default(now())

  @@map("order_events")
}

model Notification {
  id     Int  @id @default(autoincrement())
  userId Int  @map("user_id")
  user   User @relation(fields: [userId], references: [id])

  type        String  @default("order") // order, message, alert
  action      String // e.g., "Order status changed", "Place an order"
  orderId     Int?    @map("order_id")
  orderNumber String? @map("order_number")
  read        Boolean @default(false)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([read])
  @@map("notifications")
}
